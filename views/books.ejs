<%- include("partials/header") %>

    <div class="container">
        <div class="row mt-2">
            <% books.forEach( (book) =>{ %>
                <div class="col-md-4 mb-4 d-flex justify-content-center">
                    <div class="card mx-3 my-3">
                        <a href="#">
                            <img class="card-img card-img-top" src="<%= book.image %> "  alt="Picture of book">
                        </a>
                        <h3 class="card-title mt-3"><%=book.title%></h3>
                        <p class="card-text mb-3 mx-3" ><%=book.description%></p>
                    </div>  
                </div>
            <% }) %>
        </div>
    </div>
    

<%- include("partials/footer") %> 
