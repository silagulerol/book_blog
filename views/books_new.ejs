<%- include("partials/header") %>
    <div class="container">
        <form action="/books" method="POST">
            <div class="mb-3">
                <label for="title" >Title</label>
                <input type="text" class="form-control" name="title" placeholder="e.g Lord Of The Rings" autofocus>
            </div>
            <div class="mb-3">
                <label for="author" >Author</label>
                <input type="text" class="form-control" name="autor" placeholder="e.g. J.R.R. Tolkien" >
            </div>
            <div class="mb-3">
                <label for="description" >Description</label>
                <input type="text" class="form-control" name="description" placeholder="e.g. Lord Of The Rings" >
            </div>
            <div class="mb-3">
                <label for="image" >Image</label>
                <input type="text" class="form-control" name="image" placeholder="e.g. https://www.imdb.com/title/tt0120737/" >
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    


